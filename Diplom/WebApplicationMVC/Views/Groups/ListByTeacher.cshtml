@model List<WebApplicationMVC.Models.Database.Group>

@{
    ViewData["Title"] = "Группы преподавателя";
}

<style>
    body{
        padding-top: 50px;
    }
</style>

<div class="d-flex align-items-center mb-4">
    <div class="me-3" style="margin-left: -60px;">
        <a asp-controller="Users" asp-action="Index" class="text-decoration-none text-dark">
            <i class="bi bi-arrow-left fs-3"></i>
        </a>
    </div>

    <div class="container">
        <h2>@ViewData["Title"]</h2>
    </div>
</div>

@if (!Model.Any())
{
    <p>У этого преподавателя пока нет групп.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Название группы</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var group in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Groups" asp-action="Details" asp-route-id="@group.Id">
                            @group.Name
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
