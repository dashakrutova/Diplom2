<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            padding-top: 50px;
        }

        .wrapper {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 100%;
        }

        .nav {
            display: block;
            width: 200px;
            padding: 10px;
            margin: 5px;
            text-align: center;
            border: 1px solid black;
            border-radius: 5px;
            background-color: white;
            cursor: pointer;
            text-decoration: none;
            color: black;
        }

            .nav:hover {
                color: black;
                background-color: #f0f0f0;
            }


        .avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            border: 1px solid black;
        }

        .name {
            margin-top: 10px;
            text-align: center;
        }

        .exit-button {
            background-color: #00aaff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 10px;
        }

            .exit-button:hover {
                background-color: #0088cc;
            }
    </style>
</head>
<body>
    <div class="wrapper">
        <img src="@ViewBag.Avatar" alt="Аватар" class="avatar">

        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <div class="name">
                <p><strong>@ViewBag.FullName</strong></p>
                <p>Телефон: @ViewBag.Phone</p>
                <p>Почта: @ViewBag.Email</p>
            </div>
            <a asp-action="MySchedule" class="nav">Мое расписание</a>

            <form asp-controller="Auth" asp-action="Logout" method="post">
                <button type="submit" class="exit-button">Выйти</button>
            </form>
        }
    </div>

</body>
</html>
