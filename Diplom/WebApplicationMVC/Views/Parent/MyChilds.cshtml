@model IEnumerable<WebApplicationMVC.ViewModels.Parents.ChildViewModel>

@{
    // Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/myChilds.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body>
    <div class="page-title">
        <div class="d-flex align-items-center mb-4">
            <a asp-controller="Parent" asp-action="Index" class="me-3 text-decoration-none text-dark">
                <i class="bi bi-arrow-left fs-3"></i>
            </a>
            <h1>Дети</h1>
        </div>
    </div>
    <div class="children-list">
        @foreach (var item in Model)
        {
            <div class="child-item">
                <a asp-controller="Parent" asp-action="ChildSchedule" asp-route-id="@item.Id">
                    <img src="~/images/avatars/@item.AvatarFileName" alt="Аватар" class="avatar"><br />
                    @item.Name
                </a>
            </div>
        }
    </div>
    
</body>

</html>

