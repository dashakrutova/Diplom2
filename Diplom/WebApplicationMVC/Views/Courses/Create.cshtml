@model WebApplicationMVC.ViewModels.Courses.CreateCourseFormModel

@{
    // Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="~/css/action.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body>
    <div class="d-flex align-items-center mb-4">
        <div class="me-3" style="margin-left: -60px;">
            <a asp-controller="Courses" asp-action="Index" class="text-decoration-none text-dark">
                <i class="bi bi-arrow-left fs-3"></i>
            </a>
        </div>

        <div class="container">
            <h4>Курс</h4>
        </div>
    </div>
 <div class="container">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Название</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Описание</label>
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GroupPrice" class="control-label">Цена группового занятий</label>
                    <input asp-for="GroupPrice" class="form-control" />
                    <span asp-validation-for="GroupPrice" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IndividualPrice" class="control-label">Цена индивидуального занятия</label>
                    <input asp-for="IndividualPrice" class="form-control" />
                    <span asp-validation-for="IndividualPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                        <input type="submit" value="Создать" class="btn btn-custom" />
                </div>
            </form>
        </div>
    </div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
