@model List<WebApplicationMVC.Models.Database.Student>

@{
    ViewData["Title"] = "Дети родителя";
}

<h2>@ViewData["Title"]</h2>

@if (Model.Count == 0)
{
    <p>У этого родителя нет привязанных детей.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ФИО</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@student.Id">
                            @student.FirstName @student.LastName
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
